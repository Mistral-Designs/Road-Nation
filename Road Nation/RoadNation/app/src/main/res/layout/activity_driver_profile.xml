<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverProfile">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/editBike"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bike" />

    <ImageView
        android:id="@+id/driverProfile"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user" />

    <ImageView
        android:id="@+id/driverIdentity"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="180dp"
        app:layout_constraintEnd_toEndOf="@+id/driverProfile"
        app:layout_constraintTop_toTopOf="@+id/driverProfile"
        app:srcCompat="@drawable/user" />

    <ImageView
        android:id="@+id/driverLicense"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="180dp"
        app:layout_constraintStart_toStartOf="@+id/driverProfile"
        app:layout_constraintTop_toTopOf="@+id/driverProfile"
        app:srcCompat="@drawable/user" />

    <EditText
        android:id="@+id/driverName"
        android:layout_width="270dp"
        android:layout_height="56dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:fontFamily="@font/adam"
        android:gravity="center"
        android:hint="DRIVER NAME"
        android:inputType="text"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/driverProfile" />

    <EditText
        android:id="@+id/driverEmail"
        android:layout_width="270dp"
        android:layout_height="56dp"
        android:ems="10"
        android:fontFamily="@font/adam"
        android:gravity="center"
        android:hint="DRIVER EMAIL"
        android:inputType="textEmailAddress"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/driverName" />

    <EditText
        android:id="@+id/driverPhone"
        android:layout_width="270dp"
        android:layout_height="56dp"
        android:ems="10"
        android:fontFamily="@font/adam"
        android:gravity="center"
        android:hint="DRIVER PHONE"
        android:inputType="phone"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/driverEmail" />

    <TextView
        android:id="@+id/driverRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/adam"
        android:text="DRIVER RATING"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/driverPhone" />

    <ImageButton
        android:id="@+id/profileBG"
        android:layout_width="205dp"
        android:layout_height="45dp"
        android:layout_marginEnd="207dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/adam"
        android:text="@string/profile"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif-thin"
        app:layout_constraintBottom_toBottomOf="@+id/profileBG"
        app:layout_constraintEnd_toEndOf="@+id/profileBG"
        app:layout_constraintStart_toStartOf="@+id/profileBG"
        app:layout_constraintTop_toTopOf="@+id/profileBG" />

    <ImageButton
        android:id="@+id/requestsBG"
        android:layout_width="205dp"
        android:layout_height="45dp"
        android:layout_marginStart="205dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/requests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/adam"
        android:text="@string/requests"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif-thin"
        app:layout_constraintBottom_toBottomOf="@+id/requestsBG"
        app:layout_constraintEnd_toEndOf="@+id/requestsBG"
        app:layout_constraintStart_toStartOf="@+id/requestsBG"
        app:layout_constraintTop_toTopOf="@+id/requestsBG" />

</android.support.constraint.ConstraintLayout>